<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addproducts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/design_default_color_on_primary"
    android:orientation="vertical"
    tools:context=".Admin_InsertProduct">

    <TextView
        android:id="@+id/txtInsertData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/insert_data"
        android:textAlignment="center"
        android:textColor="#00008B"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_product_name"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnrounded"
        android:ems="10"
        android:hint="  Product Name"
        android:inputType="textPersonName"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/txt_product_description"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnrounded"
        android:ems="10"
        android:hint="  Description"
        android:inputType="textPersonName"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/txt_product_category"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnrounded"
        android:ems="10"
        android:hint="  Category"
        android:inputType="textPersonName"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/txt_product_gender"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnrounded"
        android:ems="10"
        android:hint="  Gender"
        android:inputType="textPersonName"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/txt_product_price"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btnrounded"
        android:ems="10"
        android:hint="  Price(xxxxx.00)"
        android:inputType="numberDecimal"
        android:textColorHint="#000000" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        app:srcCompat="@drawable/useraccount_nav" />

    <Button
        android:id="@+id/btn_submit_products"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_round_insert1"
        android:text="SUBMIT "
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>